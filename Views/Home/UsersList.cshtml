@model List<OmintakProduction.Models.User>

@{
    ViewData["Title"] = "List Users";
    Layout = "_Layout";
}

<h2 class="mb-4">List of Users</h2>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>User ID</th>
            <th>Username</th>
            <th>Email</th>
            <th>Created Date</th>
            <th>Is Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserId</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.CreatedDate</td>
                <td>@(user.isActive ? "Yes" : "No")</td>
                <td>
                    <a asp-controller="User" asp-action="Update" asp-route-id="@user.UserId" class="btn btn-sm btn-warning me-2">Update</a>
                    <a asp-controller="User" asp-action="Delete" asp-route-id="@user.UserId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
